<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/scanbtn"
        android:layout_width="254dp"
        android:layout_height="52dp"
        android:layout_marginTop="252dp"
        android:backgroundTint="#454242"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/scan_for_meals"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tickImageView"
        android:layout_width="150dp"
        android:layout_height="157dp"
        android:src="@drawable/tick_gif"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scantext"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/crossImageView"
        android:layout_width="600dp"
        android:layout_height="576dp"
        android:src="@drawable/cross"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scantext"
        app:layout_constraintVertical_bias="0.648" />

    <ImageView
        android:id="@+id/cautionImageView"
        android:layout_width="568dp"
        android:layout_height="821dp"
        android:src="@drawable/caution"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scantext"
        app:layout_constraintVertical_bias="0.807" />

    <TextView
        android:id="@+id/scantext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="212dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/status"
        android:textColor="#F3F3F3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanbtn"
        app:layout_constraintVertical_bias="0.455" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="215dp"
        android:layout_height="101dp"
        android:layout_marginTop="44dp"
        android:fontFamily="cursive"
        android:text="@string/trikon"
        android:textAlignment="center"
        android:textColor="#FFFCFC"
        android:textSize="85sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="123dp"
        android:layout_height="134dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/intellia" />

    <Button
        android:id="@+id/plannerbtn"
        android:layout_width="250dp"
        android:layout_height="51dp"
        android:layout_marginTop="196dp"
        android:backgroundTint="#454242"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/m2m_planner"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/socialbtn"
        android:layout_width="327dp"
        android:layout_height="61dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#454242"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Our Socials"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="294dp"
        android:layout_height="100dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:textColor="#FFFCFC"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/socialbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanbtn"
        app:layout_constraintVertical_bias="0.353" />

    <ImageView
        android:id="@+id/loading"
        android:layout_width="197dp"
        android:layout_height="187dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/socialbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanbtn"
        app:srcCompat="@drawable/loading" />

    <TextView
        android:id="@+id/currentact"
        android:layout_width="383dp"
        android:layout_height="68dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/no_current_activity"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/socialbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textClock"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/upcomingact"
        android:layout_width="363dp"
        android:layout_height="49dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/upcoming_no_activity"
        android:textAlignment="center"
        android:textColor="#F3F3F3"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/socialbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentact"
        app:layout_constraintVertical_bias="0.511" />

    <Button
        android:id="@+id/mcount"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#454242"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/meal_count"
        android:textColor="#F1F1F1"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textClock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanbtn" />

    <Switch
        android:id="@+id/mealswitch"
        android:layout_width="141dp"
        android:layout_height="36dp"
        android:layout_marginTop="160dp"
        android:fontFamily="sans-serif"
        android:text="Enable Scan"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textOff="QR Deactivated"
        android:textOn="QR Activated"
        android:textStyle="bold"
        android:thumbTint="#574444"
        android:trackTint="#F4F4F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


</androidx.constraintlayout.widget.ConstraintLayout>
